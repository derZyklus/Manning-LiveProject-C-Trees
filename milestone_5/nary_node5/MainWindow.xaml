<Window x:Class="nary_node5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nary_node5"
        mc:Ignorable="d"
        Title="nary_node5" Height="200" Width="260" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="MainCanvas" Height="Auto" MouseMove="MainCanvas_MouseMove" ></Canvas>
        <StatusBar Grid.Row="1">
            <Label Height="25" x:Name="LabelSize"></Label>
        </StatusBar>
    </Grid>
</Window>
